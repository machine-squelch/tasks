# DLuxe Task Tracker - Environment Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=production
PORT=8080

# JWT Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-this-in-production
JWT_EXPIRES_IN=24h

# Database Configuration
DATABASE_PATH=/workspace/data/tasks.db
DATABASE_URL=sqlite:///workspace/data/tasks.db

# For future PostgreSQL migration:
# DATABASE_URL=postgresql://username:password@localhost:5432/dluxe_tasks

# App Configuration
APP_URL=${APP_URL}

# Security Settings
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Redis for caching (for future scaling)
# REDIS_URL=redis://localhost:6379

# Optional: Email notifications (for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_NOTIFICATIONS=true
ENABLE_BROWSER_NOTIFICATIONS=true
ENABLE_SOUND_NOTIFICATIONS=true